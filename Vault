import time
while True:
    password=input("input password")
    if password.strip().lower() in ['p@ssword']:
        break
    print("Invalid input")
while True:
    s_quest_1=input("security question 1. length of your mother's big toe in inches rounded to the nearest whole number")
    if s_quest_1.strip().lower() in ['12']:
        break
    print("Invalid input")
while True:
    s_quest_2=input("security question 2. what is the name of the beaver that lives under the bridge on second street?")
    if s_quest_2.strip().lower() in ['jerry']:
        break
    print("Invalid input")
print("Loading Top Secret Intel")
